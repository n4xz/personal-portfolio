---
import phone from '../images/socialmedia/phone.svg'
import email from '../images/socialmedia/email.svg'
---

<div
	class='flex flex-col items-center gap-4 py-16 w-screen text-center px-3  max-w-7xl mx-auto'
>
	<h3 class='text-2xl pt-12 md:text-4xl lg:text-3xl md:pt-20 lg:pt-32'>
		Hi, my name is <strong>Mihai.</strong>
	</h3>
	<h1
		id='text'
		class='text-4xl font-bold pb-12 md:text-5xl lg:text-7xl md:pb-20 lg:pb-32'
	>
	</h1>
	<div
		class='flex gap-5 px-6 py-3 backdrop-blur-sm backdrop-brightness-200 items-center rounded-lg md:hidden'
	>
		<a href='tel:+40731692494'>
			<img
				class='h-8 transition-all animate-pulse duration-300 hover:scale-125'
				src={phone}
				alt='phone icon'
			/>
		</a>
		<div class='py-2'>|</div>
		<a href='mailto:n4xz@icloud.com'>
			<img
				class='h-8 transition-all animate-pulse duration-300 hover:scale-125'
				src={email}
				alt='email icon'
			/>
		</a>
	</div>
</div>

<script>
	const textElement = document.getElementById('text')
	const phrases = ['UI/UX Designer & Web Developer']
	let phraseIndex = 0
	let charIndex = 0
	let isTyping = true

	function typeAndEraseText() {
		const currentPhrase = phrases[phraseIndex]

		if (isTyping) {
			textElement.textContent = currentPhrase.substring(0, charIndex)
			charIndex++

			if (charIndex <= currentPhrase.length) {
				setTimeout(typeAndEraseText, 150) // Typing speed
			} else {
				isTyping = false
				setTimeout(typeAndEraseText, 1000) // Delay before erasing
			}
		} else {
			textElement.textContent = currentPhrase.substring(0, charIndex)
			charIndex--

			if (charIndex >= 0) {
				setTimeout(typeAndEraseText, 100) // Erasing speed
			} else {
				isTyping = true
				phraseIndex = (phraseIndex + 1) % phrases.length // Move to the next phrase
				setTimeout(typeAndEraseText, 1000) // Delay before typing the next phrase
			}
		}
	}

	typeAndEraseText()
</script>
