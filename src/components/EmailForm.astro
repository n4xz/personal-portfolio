<form
	name='contact'
	method='POST'
	data-netlify='true'
	onsubmit='submit'
	class='p-12 flex flex-col justify-evenly items-center max-w-lg'
>
	<label
		>Your Name: <input
			class='bg-neutral-200 min-w-full rounded-lg px-4 py-2 mb-4'
			type='text'
			name='name'
		/></label
	>

	<hr />
	<label
		>Your Email: <input
			class='bg-neutral-200 min-w-full rounded-lg px-4 py-2 mb-4'
			type='email'
			name='email'
		/></label
	>
	<hr />
	<label
		>Message: <textarea
			class='bg-neutral-200 min-w-full rounded-lg px-4 py-2 mb-4'
			name='message'></textarea></label
	>
	<hr />
	<button class='px-8 py-2 bg-neutral-200 rounded-full max-w-min' type='submit'
		>Send</button
	>
</form>
