---
interface Props {
	title: string
}

const { title } = Astro.props

import bg from '../images/bg.svg'
import Header from '../components/structure/Header.astro'
import Footer from '../components/structure/Footer.astro'
---

<!DOCTYPE html>
<html lang='en' class='bg-[#080808] scroll-smooth'>
	<head>
		<meta charset='UTF-8' />
		<meta name='description' content='Astro description' />
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<link rel="icon" href="../../public/favicon.ico" type="image/x-icon">
		<title>{title}</title>
	</head>
	<body class='text-neutral-100 scroll-smooth'>
		<img
			class='fixed top-0 bottom-0 object-cover w-full h-full -z-10 opacity-30'
			src={bg}
			alt='background black texture'
		/>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
