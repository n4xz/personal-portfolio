---
interface Props {
	title: string
}

const { title } = Astro.props

import bg from '../images/bg.svg'
import Header from '../components/structure/Header.astro'
import Footer from '../components/structure/Footer.astro'
---

<!DOCTYPE html>
<html lang='en' class='bg-[#080808] scroll-smooth'>
	<head>
		<meta charset='UTF-8' />
		<meta
			name='description'
			content='Elevate your brand with a professional website  - UI/UX Designer & Web Developer in Bucharest, Romania. #html #css #javascript #react #astro #tailwind'
		/>
		<meta name='viewport' content='width=device-width' />
		<meta name='generator' content={Astro.generator} />
		<link rel='icon' href='/favicon.ico' type='image/x-icon' />
		<link rel="apple-touch-icon" href="/public/favicon.png">
		<link rel='sitemap' href='/sitemap-index.xml' />
		<link rel="canonical" href="https://mihaipostelnicu.com/">

		<meta
			name='google-site-verification'
			content='dcvxSJjVF2vSMN7HxsQ9Yos7HjcDeuyn_tnwba60e1A'
		/>
		<title>{title}</title>
		<script type='application/ld+json'>
			{
				"@context": "http://schema.org",
				"@type": "WebSite",
				"name": "Web Developer Portfolio",
				"description": "Showcasing the web development work of Mihai Postelnicu.",
				"url": "https://mihaipostelnicu.com",
				"publisher": {
					"@type": "Person",
					"name": "Mihai Postelnicu"
				}
			}
		</script>
		<script async src='https://www.googletagmanager.com/gtag/js?id=G-V1QPMRWL3F'
		></script>
		<script>
			window.dataLayer = window.dataLayer || []
			function gtag() {
				dataLayer.push(arguments)
			}
			gtag('js', new Date())

			gtag('config', 'G-V1QPMRWL3F')
		</script>
	</head>
	<body class='text-neutral-100 font-thin scroll-smooth'>
		<img
			class='fixed top-0 bottom-0 object-cover w-full h-full -z-10 opacity-60'
			src={bg}
			alt='background black texture'
		/>
		<Header />
		<slot />
		<Footer />
	</body>
</html>
